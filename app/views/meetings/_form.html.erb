<%= form_for @meeting do |f| %>
  <div class="form-group">
    <label>Title*</label>
    <%= f.text_field :title, placeholder: "Title", required: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Description*</label>
    <%= f.text_area :description, placeholder: "Description", required: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Meeting User*</label>
    <%=f.select :invitee_id, options_for_select(User.where.not(id: current_user.id).pluck(:email, :id), f.object.invitee_id), {include_blank: "---- Select Meeting User--- "}, { class: "form-control", required: true} %>
  </div>

  <div class="form-group">
    <button type="submit" class="btn btn-primary" >Save</button>
    <%= link_to 'Back', meetings_path, class: "btn btn-primary" %>
  </div>
<%end%>
